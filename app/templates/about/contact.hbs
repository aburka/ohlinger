<div class="container">
  <div class="row">
    <h1>Contact JJ About Making An Appointment:</h1>
    <div class="col-sm-12 col-md-12">
      <div class="form-group">
        <label for="appt-name">Your Name</label>
        {{input type=text value=name class="form-control" id="appt-name"}}
      </div>
      <div class="form-group">
        <label for="appt-email">Your Email Address</label>
        {{input type=text value=email class="form-control" id="appt-email"}}
      </div>
      <div class="form-group">
        <label for="appt-phone">Your Phone Number</label>
        {{input type=text value=phone class="form-control" id="appt-phone"}}
      </div>
      <div class="form-group">
        <label for="about-appt">What are you looking for?</label>
        {{textarea type=text value=comments class="form-control" id="appt-date"}}
      </div>
      <button class="btn btn-primary" {{action 'submitContact'}}>Submit</button>
    </div>
  </div>
</div>

{{outlet}}
