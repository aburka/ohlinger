<div class="container">
  <div class="row">
    <h1>Contact JJ About Making An Appointment:</h1>
    <div class="col-sm-4 col-md-4">
      <div class="form-group">
        <label for="appt-name">Your Name</label>
        {{input type=text value=name class="form-control" id="appt-name"}}
      </div>
      <div class="form-group">
        <label for="appt-email">Your Email Address</label>
        {{input type=text value=email class="form-control" id="appt-email"}}
      </div>
      <div class="form-group">
        <label for="appt-phone">Your Phone Number</label>
        {{input type=text value=email class="form-control" id="appt-phone"}}
      </div>
      <div class="form-group">
        <label for="appt-date">Preferred Date</label>
        {{bootstrap-datepicker placeholder="Click to Select a Date" class="form-control" id="appt-date"}}
      </div>
      <button {{action 'submit-event' class="btn btn-primary"}}>Submit</button>
    </div>
  </div>
</div>

{{outlet}}
