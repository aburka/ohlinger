<div class="row">
{{#gallery-modal images=model as |openGallery|}}
  {{#masonry-grid}}
    {{#each model as |img index|}}
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="{{img.thumbnail.url}}" alt="" {{action openGallery index}} />
          <div class="caption">
            <h4><strong>{{img.title}}</strong></h4>
            {{img.caption}}
            <p class="text-muted">{{img.category}}</p>
          </div>
        </div>
      </div>
    {{/each}}
  {{/masonry-grid}}
{{/gallery-modal}}
</div>
