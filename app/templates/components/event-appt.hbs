<h2>Request an appointment for {{g model 'title'}}</h2>

<div class="form-group" id="appointment_form">
  <input type="hidden" value="{{g model 'title'}}">
  <label for="appt-name">Your Name <span class="required">*</span></label>
  {{input type=text value=name class="form-control" id="appt-name" required=true}}
</div>
<div class="form-group">
  <label for="appt-email">Your Email Address <span class="required">*</span></label>
  {{input type=text value=email class="form-control" id="appt-email" required=true}}
</div>
<div class="form-group">
  <label for="appt-phone">Your Phone Number</label>
  {{input type=text value=phone class="form-control" id="appt-phone"}}
</div>
<div class="form-group">
  <label for="about-appt">Please describe in detail what you're looking for, including size, body positioning, etc. <span class="required">*</span></label>
  {{textarea type=text value=comments class="form-control" id="about-appt" required=true}}
</div>
<button class="btn btn-primary btn-sm submit-button" {{action "submitAppt"}}>Submit</button>

{{yield}}
