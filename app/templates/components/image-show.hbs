<div class="row">
  <div class="col-md-8 col-md-offset-2 image-show">
    <img src="{{invoke (g model 'image') 'url'}}" alt="" class="image-show-img"/>
    <div class="caption image-show-caption">
      <h4>{{g model 'title'}}</h4>
      <p>{{g model 'caption'}}</p>
      <p class="image-tag">
        <ul class="image-show-tags">
          {{#each (g model 'tags') as |tag|}}
            <li class="image-tag text-muted">{{#link-to 'tattoo.tags.show' tag}}{{tag}}{{/link-to}}</li>
          {{/each}}
        </ul>
      </p>
    </div>

  </div>
</div>
